@model listaTarefas.Models.Tarefa
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <title>Criar Tarefa</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu.js" asp-append-version="true"></script>
</head>

<body>
    @await Html.PartialAsync("_NavSair")
    @await Html.PartialAsync("_Header")
    @await Html.PartialAsync("_Navbar")

    <div class="page-container">
        <main>
            <div class="box">
                <h2>Criar Tarefa</h2>

                

                                <form asp-action="Create" method="post" class="formulario">

                                <div class="form-group">
                        <label asp-for="DataCriacao" >Data de Criação</label>
                        <input asp-for="DataCriacao" type="date"  value="@DateTime.Today.ToString("yyyy-MM-dd")" readonly />
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Titulo">Título</label>
                        <input asp-for="Titulo" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Descricao">Descrição</label>
                        <input asp-for="Descricao" />
                    </div>

                    

                    <div class="form-group">
                        <label asp-for="DataFinalizacao">Data de Finalização</label>
                        <input asp-for="DataFinalizacao" type="date" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Status">Status</label>
                        <select asp-for="Status"
                                asp-items="Html.GetEnumSelectList<listaTarefas.Models.StatusTarefa>()"></select>
                    </div>

                    <div class="object-inline">
                        <button type="submit" class="button-project">Salvar</button>
                        <button type="reset" class="button-project">Limpar</button>
                        
                    </div>
                </form>
            </div>
        </main>

        @await Html.PartialAsync("_Footer")
    </div>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

</body>
</html>
